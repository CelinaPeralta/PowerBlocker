{
    "manifest_version": 2,

    "name": "PowerBlocker",
    "description": "Block sites until you reach your desired GPA!",
    "version": "1.0",

    "browser_action": {
        "default_title": "PowerBlocker",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["background.js"]
    },
    "background": {
        "page": "background.html"
    },
    "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
        "https://*/*",
        "http://*/*",
        "ps01.bergen.org/*/*"
  ]
}