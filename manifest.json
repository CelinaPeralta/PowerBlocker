{
    "manifest_version": 2,

    "name": "PowerBlocker",
    "description": "Get off PowerSchool, friend.",
    "version": "1.1",

    "browser_action": {
        "default_title": "PowerBlocker",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["PowerBlocker.js"]
    },
    "background": {
        "page": "background.html"
    },
    "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
        "https://*/*",
        "http://*/*",
        "tabs",
        "history",
        "contentSettings"
  ]
}